{
  "name": "react-modal-port",
  "version": "1.0.0",
  "description": "Launch modals from any React component.",
  "type": "module",
  "types": "./dist/types/index.d.ts",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.mjs",
  "exports": {
    "import": "./dist/esm/index.mjs",
    "require": "./dist/cjs/index.cjs",
    "types": "./dist/types/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "tsc --outDir dist/esm --module esnext",
    "build:cjs": "tsc --outDir dist/cjs --module commonjs",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oliverwehn/react-modal-port.git"
  },
  "tags": [
    "react",
    "modal",
    "dialog"
  ],
  "keywords": [
    "react",
    "react-component",
    "modal",
    "dialog"
  ],
  "author": "Oliver Greuter-Wehn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oliverwehn/react-modal-port/issues"
  },
  "homepage": "https://github.com/oliverwehn/react-modal-port#readme",
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18.2.19",
    "react": "^18.2.0",
    "react-dom": "^18",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@types/react": "^18",
    "react": "^18",
    "react-dom": "^18"
  }
}
