{
  "name": "react-modal-port",
  "version": "0.1.1",
  "description": "Launch modals from any React component.",
  "type": "module",
  "source": "src/index.ts",
  "types": "types/index.d.ts",
  "main": "dist/cjs/index.cjs",
  "main:umd": "dist/umd/index.js",
  "module": "dist/esm/index.mjs",
  "exports": {
    "default": "./dist/esm/index.modern.mjs",
    "import": "./dist/esm/index.mjs",
    "require": "./dist/cjs/index.cjs",
    "types": "./types/index.d.ts"
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:esm-modern && npm run build:cjs && npm run build:umd",
    "build:esm": "microbundle -o dist/esm/index.mjs --format esm",
    "build:esm-modern": "microbundle -o dist/esm/index.modern.mjs --format modern",
    "build:cjs": "microbundle -o dist/cjs/index.cjs --format cjs",
    "build:umd": "microbundle -o dist/umd/index.js --format umd",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oliverwehn/react-modal-port.git"
  },
  "tags": [
    "react",
    "modal",
    "dialog"
  ],
  "keywords": [
    "react",
    "react-component",
    "modal",
    "dialog"
  ],
  "author": "Oliver Greuter-Wehn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oliverwehn/react-modal-port/issues"
  },
  "homepage": "https://github.com/oliverwehn/react-modal-port#readme",
  "devDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18.2.19",
    "microbundle": "^0.15.1",
    "react": "^18.2.0",
    "react-dom": "^18",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@types/react": "^18",
    "react": "^18",
    "react-dom": "^18"
  }
}
